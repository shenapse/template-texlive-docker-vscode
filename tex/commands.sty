%	depends on mathtools pacakge
\DeclarePairedDelimiter\abs{\lvert}{\rvert}
\DeclarePairedDelimiter\norm{\lVert}{\rVert}
% 	Swap the definition of \abs* and \norm*,
% 	so that \abs and \norm resizes the size of the brackets,
% 	and the starred version does not.
% 	SO USE \abs and \norm
\makeatletter
\let\oldabs\abs
\def\abs{\@ifstar{\oldabs}{\oldabs*}}
%
\let\oldnorm\norm
\def\norm{\@ifstar{\oldnorm}{\oldnorm*}}
\makeatother
